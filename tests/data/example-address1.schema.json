{
    "$schema": "http:\/\/json-schema.org\/draft-04\/schema#",
    "type": "object",
    "required": [
        "address",
        "phoneNumber"
    ],
    "properties": {
        "address": {
            "type": "object",
            "required": [
                "streetAddress",
                "city"
            ],
            "properties": {
                "streetAddress": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                }
            }
        },
        "phoneNumber": {
            "type": "array",
            "items": {
                "anyOf": [
                    {
                        "type": "object",
                        "required": [
                            "type",
                            "number"
                        ],
                        "properties": {
                            "type": {
                                "type": "string"
                            },
                            "number": {
                                "type": "string"
                            }
                        }
                    }
                ]
            }
        }
    }
}